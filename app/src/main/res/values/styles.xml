<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainMenuButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/main_menu_button_start_margin</item>
        <item name="android:layout_marginEnd">@dimen/main_menu_button_end_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/main_menu_button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">@dimen/main_menu_button_margin_bottom</item>
        <item name="android:background">@drawable/main_menu_button_background</item>
    </style>

    <style name="CustomMaterialTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">#5A6DD3</item>
        <item name="android:colorPrimaryDark">#436AB8</item>
        <item name="colorAccent">#CC3177</item>
    </style>
</resources>